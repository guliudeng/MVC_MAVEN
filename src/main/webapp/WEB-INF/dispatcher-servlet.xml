<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">
<!--这个文件负责整个MVC中的配置-->
<!--   启动spring一些annotation -->
    <context:annotation-config></context:annotation-config>
<!--    配置注解驱动，可以将request参数绑定到controller参数上-->
    <mvc:annotation-driven></mvc:annotation-driven>
<!--    静态资源映射-->
    <mvc:resources mapping="/css/**" location="static/css/"></mvc:resources>
    <mvc:resources mapping="/js/**" location="static/js/"></mvc:resources>
    <mvc:resources mapping="/image/**" location="static/images/"></mvc:resources>
<!--    默认找不到静态资源使用默认servlet处理-->
    <mvc:default-servlet-handler></mvc:default-servlet-handler>
<!--    对模型试图名称的解析，即在视图名称添加前后缀 使用jsp-->
<!--    默认视图解析器 在上面解析错误时使用 （默认使用HTML）-->
    <bean id="defaultViewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.JstlView"></property>
<!--        配置jsp文件目录位置-->
        <property name="prefix" value="WEB-INF/views/"></property>
        <property name="suffix" value=".jsp"></property>
        <property name="exposeContextBeansAsAttributes" value="true"></property>
    </bean>
<!--    自动扫描装配mvc控制分发器-->
    <context:component-scan base-package="cn.cry.controller"></context:component-scan>

<!--    配置拦截器-->
<!--    <mvc:interceptors>-->
